<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Web enrollment</display-name>

    <servlet>
        <servlet-name>ScepRAServlet</servlet-name>
        <display-name>ScepRAServlet</display-name>
        <servlet-class>org.ejbca.extra.ra.ScepRAServlet</servlet-class>
        <init-param>
            <param-name>includeCACert</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>keyStorePath</param-name>
            <param-value>@jboss.conf.dir@/sceprakeystore.p12</param-value>
        </init-param>
        <init-param>
            <param-name>keyStorePassword</param-name>
            <param-value>foo123</param-value>
        </init-param>
        <init-param>
            <param-name>cryptProvider</param-name>
            <param-value>BC</param-value>
        </init-param>
        <init-param>
            <param-name>sessionFactoryContext</param-name>
            <param-value>java:/hibernate/SCEPRASessionFactory</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ScepRAServletNoCACert</servlet-name>
        <display-name>ScepRAServletNoCACert</display-name>
        <servlet-class>org.ejbca.extra.ra.ScepRAServlet</servlet-class>
        <init-param>
            <param-name>includeCACert</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>keyStorePath</param-name>
            <param-value>@jboss.conf.dir@/sceprakeystore.p12</param-value>
        </init-param>
        <init-param>
            <param-name>keyStorePassword</param-name>
            <param-value>foo123</param-value>
        </init-param>
        <init-param>
            <param-name>cryptProvider</param-name>
            <param-value>BC</param-value>
        </init-param>
        <init-param>
            <param-name>sessionFactoryContext</param-name>
            <param-value>java:/hibernate/SCEPRASessionFactory</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
      <servlet-name>ScepRAServlet</servlet-name>
      <url-pattern>/scep/pkiclient.exe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>ScepRAServletNoCACert</servlet-name>
      <url-pattern>/scep/noca/pkiclient.exe</url-pattern>
    </servlet-mapping>



   <env-entry>
      <description><![CDATA[Default content encoding used to decode form posts]]></description>
      <env-entry-name>contentEncoding</env-entry-name>
      <env-entry-value>ISO-8859-1</env-entry-value>
      <env-entry-type>java.lang.String</env-entry-type>
   </env-entry>

</web-app>
