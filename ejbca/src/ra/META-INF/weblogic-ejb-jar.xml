<?xml version="1.0"?>

<!DOCTYPE weblogic-rdbms-jar PUBLIC
 '-//BEA Systems, Inc.//DTD WebLogic 8.1.0 EJB RDBMS Persistence//EN'
 'http://www.bea.com/servers/wls810/dtd/weblogic-rdbms20-persistence-810.dtd'>

<weblogic-ejb-jar>

    <weblogic-enterprise-bean>
        <ejb-name>UserAdminSession</ejb-name>
        <transaction-descriptor>
          <trans-timeout-seconds>900</trans-timeout-seconds>
        </transaction-descriptor>
        <reference-descriptor>
        <resource-description>
	<res-ref-name>
	  mail/DefaultMail
	</res-ref-name>
        <jndi-name>
	  DefaultMail
        </jndi-name>
     </resource-description>
        
        </reference-descriptor>
        <jndi-name>UserAdminSession</jndi-name>
    </weblogic-enterprise-bean>

    <weblogic-enterprise-bean>
      <ejb-name>RaAdminSession</ejb-name>
      <transaction-descriptor>
        <trans-timeout-seconds>900</trans-timeout-seconds>
      </transaction-descriptor>
      <jndi-name>RaAdminSession</jndi-name>
    </weblogic-enterprise-bean>

  <weblogic-enterprise-bean>
    <ejb-name>UserData</ejb-name>   
    <entity-descriptor>
      <persistence>
        <persistence-type>
          <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
          <type-version>7.0</type-version>
          <type-storage>META-INF/weblogic-cmp-rdbms-jar.xml</type-storage>
        </persistence-type>
        <persistence-use>
          <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
          <type-version>7.0</type-version>
        </persistence-use>
      </persistence>
    </entity-descriptor>
    <jndi-name>UserData</jndi-name>
  </weblogic-enterprise-bean>

    <weblogic-enterprise-bean>
      <ejb-name>GlobalConfigurationData</ejb-name>
      <entity-descriptor>
        <persistence>
          <persistence-type>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
            <type-storage>META-INF/weblogic-cmp-rdbms-jar.xml</type-storage>
          </persistence-type>
          <persistence-use>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
          </persistence-use>
        </persistence>
      </entity-descriptor>
      <jndi-name>GlobalConfigurationData</jndi-name>
    </weblogic-enterprise-bean>

    <weblogic-enterprise-bean>
      <ejb-name>AdminPreferencesData</ejb-name>
      <entity-descriptor>
        <persistence>
          <persistence-type>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
            <type-storage>META-INF/weblogic-cmp-rdbms-jar.xml</type-storage>
          </persistence-type>
          <persistence-use>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
          </persistence-use>
        </persistence>
      </entity-descriptor>
      <jndi-name>AdminPreferencesData</jndi-name>
    </weblogic-enterprise-bean>

    <weblogic-enterprise-bean>
      <ejb-name>EndEntityProfileData</ejb-name>
      <entity-descriptor>
        <persistence>
          <persistence-type>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
            <type-storage>META-INF/weblogic-cmp-rdbms-jar.xml</type-storage>
          </persistence-type>
          <persistence-use>
            <type-identifier>WebLogic_CMP_RDBMS</type-identifier>
            <type-version>7.0</type-version>
          </persistence-use>
        </persistence>
      </entity-descriptor>
      <jndi-name>EndEntityProfileData</jndi-name>
    </weblogic-enterprise-bean>

   <security-role-assignment>
      <role-name>InternalUser</role-name>
      <principal-name>system</principal-name>
   </security-role-assignment>
   <security-role-assignment>
      <role-name>SuperAdmin</role-name>
      <principal-name>CH</principal-name>
   </security-role-assignment>
   <security-role-assignment>
      <role-name>everyone</role-name>
      <principal-name>everyone</principal-name>
   </security-role-assignment>

</weblogic-ejb-jar>
