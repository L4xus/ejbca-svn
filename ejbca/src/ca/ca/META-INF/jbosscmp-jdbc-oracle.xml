<?xml version="1.0"?>

<jbosscmp-jdbc>

<defaults>
    <datasource>java:/DefaultDS</datasource>
    <datasource-mapping>Oracle8</datasource-mapping>
</defaults>

<!-- Setting for Oracle in EJBCA version > 2.0. 
     base64cert and base64crl fields need to hold complete certificates and CRLs which can be long. 
-->

<enterprise-beans>
    <entity>
        <ejb-name>CertificateData</ejb-name>
        <cmp-field>
            <field-name>base64Cert</field-name>
            <jdbc-type>LONGVARCHAR</jdbc-type>
            <sql-type>LONG</sql-type>
        </cmp-field>
    </entity>

    <entity>
        <ejb-name>CRLData</ejb-name>
        <cmp-field>
            <field-name>base64Crl</field-name>
            <jdbc-type>LONGVARCHAR</jdbc-type>
            <sql-type>LONG</sql-type>
        </cmp-field>
    </entity>

    <entity>
        <ejb-name>CAData</ejb-name>
        <cmp-field>
            <field-name>data</field-name>
            <jdbc-type>LONGVARCHAR</jdbc-type>
            <sql-type>LONG</sql-type>
        </cmp-field>
    </entity>

</enterprise-beans>

</jbosscmp-jdbc>
