<?xml version="1.0"?>

<!DOCTYPE application PUBLIC
	"-//Sun Microsystems, Inc.//DTD J2EE Application 1.3//EN"
	"http://java.sun.com/dtd/application_1_3.dtd">

<application>
    <display-name>EJBCA-CA</display-name>
    <description>The EJBCA CA module consists of the CA beans and the web 
application for enrollment (apply) and distribution (webdist).
    </description>
    <module>
        <web>
            <web-uri>caroot.war</web-uri>
            <context-root>/ejbca</context-root>
        </web>
    </module>
    <module>
        <ejb>ca.jar</ejb>
    </module>
    <module>
        <ejb>ra.jar</ejb>
    </module>
    <module>
        <ejb>log.jar</ejb>
    </module>      
    <module>
        <web>
            <web-uri>apply.war</web-uri>
            <context-root>/ejbca/apply</context-root>
        </web>
    </module>
    <module>
        <web>
            <web-uri>webdist.war</web-uri>
            <context-root>/ejbca/webdist</context-root>
        </web>
    </module>
</application>

